import getopt
import os
import sys

POSSIBLE_TOPDIR = os.path.normpath(os.path.join(os.path.abspath(sys.argv[0]),
                                   os.pardir,
                                   os.pardir))
if os.path.exists(os.path.join(POSSIBLE_TOPDIR, 'nova', '__init__.py')):
    sys.path.insert(0, POSSIBLE_TOPDIR)

from nova import context
from nova import db
from nova import flags
from nova import utils

FLAGS = flags.FLAGS

usage = """
usage:
            --flavor <flavor name>
            """


def main():
    opts, args = getopt.getopt(
             sys.argv[1:],
             "",
             [
                 'flagfile=',
                 'flavor=',
             ])

    flagfile = None
    type = None

    for o, a in opts:
        if o == "--flavor":
            type = a
        if o == "--flagfile":
            flagfile = [a]

    error = False
    if not type:
        print "flavor is None"
        error = True

    if error:
        print usage
        sys.exit(1)

    args = sys.argv[:1] + args
    args = flags.parse_args(args, default_config_files=flagfile)
    ctx = context.get_admin_context()

    t = db.instance_type_get_by_name(ctx, type)
    specs = t['extra_specs']
    fmt = "%-12s  %-12s"
    print fmt % ("KEY", "VALUE")
    for key, value in specs.iteritems():
        print fmt % (key, value)


if __name__ == "__main__":
    main()
